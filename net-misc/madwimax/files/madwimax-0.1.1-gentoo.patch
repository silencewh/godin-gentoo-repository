+#!/bin/sh
+# Usage: event.sh <event> <if-name>
+
+IFNAME=$2
+
+case "$1" in
+    if-create)
+    ;;
+    if-up)
+        test -x /etc/init.d/net.$IFNAME && /etc/init.d/net.$IFNAME start
+    ;;
+    if-down)
+        test -x /etc/init.d/net.$IFNAME && /etc/init.d/net.$IFNAME stop
+    ;;
+    if-release)
+    ;;
+    *)
+	echo "Usage: $0 { if-create | if-up | if-down | if-release }" >&2
+	exit 3
+    ;;
+esac
+
